{
  "manifest_version": 3,
  "name": "3_Screenshots",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "Capture desktop screenshots on an interval for a duration. Hides download shelf and writes a session log file.",
  "permissions": [
    "desktopCapture",
    "downloads",
    "downloads.shelf"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Start desktop capture"
  }
}